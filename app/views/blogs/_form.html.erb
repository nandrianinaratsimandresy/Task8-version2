
<%= form_with(model: @blog, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>There are errors.</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :tweet %>
    <%= form.text_field :tweet %>
  </div>

  <% if @blog.id.present? %>
      <%= form.submit "Update" %>
  <% else %>
      <%= form.submit "Create" %>
  <% end %>
<% end %>
<%= link_to "Return to the list of tweets", blogs_path %>
